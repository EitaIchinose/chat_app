<div class="main-chat_top">
  <div class="main-chat_left">
    <div class="main-chat_name">
      <%= @room.name %>
    </div>
  </div>
  <div class="main-chat_right">
    <div class="chat-end">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="main-chat_middle">
  <%= render partial: "message", collection: @messages %>
</div>

<%= form_with model: [@room, @message], class: "main-chat_bottom", local: true do |f|%>
  <div class="form">
    <%= f.text_field :content, placeholder: "type a message", class: "message"%>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: "hidden"%>
    </label>
  </div>
    <%= f.submit "送信", class: "post-btn"%>
<% end%>